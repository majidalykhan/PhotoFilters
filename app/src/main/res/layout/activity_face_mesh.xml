<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".AugmentedFacesActivity">

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <fragment
        android:id="@+id/face_fragment"
        android:name="com.example.photofilters.FaceArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

  </FrameLayout>

  <ImageButton
      android:id="@+id/capture"
      android:layout_width="73dp"
      android:layout_height="67dp"
      android:background="@null"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.965"
      app:srcCompat="@drawable/ic_capturebtn"
      tools:ignore="VectorDrawableCompat" />

  <ImageButton
      android:id="@+id/camswitches"
      android:layout_width="73dp"
      android:layout_height="67dp"
      android:background="@null"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.965"
      app:layout_constraintHorizontal_bias="0.9"
      app:srcCompat="@drawable/ic_switch_camera_button"
      tools:ignore="VectorDrawableCompat" />

  <ImageButton
      android:id="@+id/next"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:background="@drawable/ic_next"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.94"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.5"></ImageButton>

  <ImageButton
      android:id="@+id/back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="start"
      android:background="@drawable/ic_back"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.044"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.5"></ImageButton>

  <Button
      android:id="@+id/recommend"
      android:layout_width="180dp"
      android:layout_height="35dp"
      android:layout_gravity="start"
      android:background="@drawable/ic_whitebtn"
      android:text="Recommend Filter"
      android:textColor="@color/colorPrimary"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.85"></Button>

  <ImageButton
      android:id="@+id/changeInterest"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_gravity="start"
      android:background="@drawable/ic_changeinterest"
      android:textColor="@color/colorPrimary"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="@+id/recommend"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.492"
      app:layout_constraintStart_toEndOf="@+id/recommend"
      app:layout_constraintTop_toTopOf="@+id/recommend"
      app:layout_constraintVertical_bias="0.466"></ImageButton>


</androidx.constraintlayout.widget.ConstraintLayout>
